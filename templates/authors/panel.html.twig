<!DOCTYPE html>
<html lang="EN">
<head>
    <title>Authors Panel</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container">
{% if app.session.get('delete_post_permission_error') %}
    <div class="alert alert-danger container mt-5">
        {{ app.session.get('delete_post_permission_error') }}
    </div>
    {% do app.session.remove('delete_post_permission_error') %}

    {% elseif app.session.get('delete_post_message') %}
        <div class="alert alert-warning container mt-5">
            {{ app.session.get('delete_post_message') }}
        </div>
        {% do app.session.remove('delete_post_message') %}

    {% elseif app.session.get('create_post_message') %}
        <div class="alert alert-success container mt-5">
            {{ app.session.get('create_post_message') }}
        </div>
        {% do app.session.remove('create_post_message') %}

    {% elseif app.session.get('edit_post_error') %}
        <div class="alert alert-danger container mt-5">
            {{ app.session.get('edit_post_error') }}
        </div>
        {% do app.session.remove('edit_post_error') %}

    {% elseif app.session.get('edit_post_message')%}
        <div class="alert alert-primary container mt-5">
            {{ app.session.get('edit_post_message') }}
        </div>
        {% do app.session.remove('edit_post_message') %}

    {% elseif app.session.get('register_message')%}
        <div class="alert alert-success container mt-5">
            {{ app.session.get('register_message') }}
        </div>
        {% do app.session.remove('register_message') %}

{% endif %}
<div class="mt-5">
    <nav class="border navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/authors/panel">Authors Panel ({{ app.session.get('username') }})</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_authors') }}">Authors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_authors_panel') }}">Your Posts</a>
                    </li>
                </ul>
                {% if app.session.get('user_id') %}
                    <div>
                        <a class="btn btn-outline-primary" href="{{ path('app_posts_create') }}">Create Post</a>
                        <a class="btn btn-outline-danger" href="{{ path('app_authors_logout') }}">Logout</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </nav>

    <!-- Post List -->
    <div class="row">
        {% for post in posts %}
            <div class="col-md-4 mt-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <p class="card-text">{{ post.description|slice(0, 100) ~ '...' }}</p>
                        <a href="{{ path('app_posts_show', { 'id': post.id }) }}" class="btn btn-sm btn-outline-secondary">View Post</a>
                        <a href="{{ path('app_posts_delete', { 'id': post.id }) }}" class="btn btn-sm btn-outline-danger">Delete</a>
                        <a href="{{ path('app_posts_edit', {'id': post.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <h4 class="text-secondary mt-5 text-center">No Posts Found</h4>
            </div>
        {% endfor %}
    </div>
</div>
</body>
</html>