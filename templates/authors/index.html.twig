<!DOCTYPE html>
<html lang="EN">
<head>
    <title>FouX Blog</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="mt-5 container">
    <nav class="border navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Authors</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_authors') }}">Authors</a>
                    </li>
                </ul>
                {%  if app.session.get('user_id') %}
                    <div>
                        <a class="btn btn-outline-success" href="{{ path('app_authors_panel') }}">Dashboard</a>
                    </div>
                {% else %}
                    <div>
                        <a class="mr-3 btn btn-outline-danger" href="{{ path('app_authors_login') }}">login</a>
                        <a class="btn btn-outline-warning" href="{{ path('app_authors_register') }}">Register</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </nav>

    <!-- Post List -->
    <div class="row">
        {% for author in authors %}
            <div class="col-md-4 mt-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ author.username }}</h5>
                        <p class="card-text">{{ author.bio }}</p>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p>There is no Author</p>
            </div>
        {% endfor %}
    </div>
</div>
</body>
</html>


